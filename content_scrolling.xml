<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/basicinfoLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:text="Basic Information"
            android:textSize="24sp">
        </TextView>

        <EditText
            android:id="@+id/personName"
            android:layout_below="@id/basicinfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Full Name">
        </EditText>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_below="@id/personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="Phone Number">
        </EditText>

        <EditText
            android:id="@+id/email"
            android:layout_below="@id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email ID">
        </EditText>

        <EditText
            android:id="@+id/address"
            android:layout_below="@id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="2"
            android:lines="2"
            android:hint="Detail Address">
        </EditText>

        <TextView
            android:id="@+id/skillsLabel"
            android:layout_below="@id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:padding="3dp"
            android:text="Skills"
            android:ems="10"
            android:textSize="24sp">
        </TextView>

        <EditText
            android:id="@+id/skills"
            android:layout_below="@id/skillsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Skills">
        </EditText>

        <TextView
            android:id="@+id/languagesLabel"
            android:layout_below="@id/skills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:padding="3dp"
            android:text="Languages"
            android:textSize="24sp">
        </TextView>

        <EditText
            android:id="@+id/languages"
            android:layout_below="@id/languagesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Languages">
        </EditText>

        <TextView
            android:id="@+id/academicinfoLabel"
            android:layout_below="@id/languages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:padding="3dp"
            android:text="Academic Information"
            android:textSize="24sp">
        </TextView>

        <EditText
            android:id="@+id/level"
            android:layout_below="@id/academicinfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Level of Education">
        </EditText>

        <EditText
            android:id="@+id/degree"
            android:layout_below="@id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Degree Title">
        </EditText>

        <EditText
            android:id="@+id/major"
            android:layout_below="@id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Major/Group">
        </EditText>

        <EditText
            android:id="@+id/grade"
            android:layout_below="@id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="GPA/CGPA">
        </EditText>

        <EditText
            android:id="@+id/institution"
            android:layout_below="@id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Instituion Name">
        </EditText>

        <EditText
            android:id="@+id/passingyear"
            android:layout_below="@id/institution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="Year of Pass">
        </EditText>

        <TextView
            android:id="@+id/experienceLabel"
            android:layout_below="@id/passingyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="3dp"
            android:text="Work Experience"
            android:textSize="24sp">
        </TextView>

        <EditText
            android:id="@+id/experience"
            android:layout_below="@id/experienceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Work Experience">
        </EditText>

        <TextView
            android:id="@+id/referencesLabel"
            android:layout_below="@id/experience"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:padding="3dp"
            android:text="References"
            android:textSize="24sp">
        </TextView>

        <EditText
            android:id="@+id/references"
            android:layout_below="@id/referencesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="References">
        </EditText>

        <Button
            android:id="@+id/saveButton"
            android:layout_below="@id/references"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save">
        </Button>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>